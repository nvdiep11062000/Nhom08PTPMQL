@model IEnumerable<Nhom08PTPMQL.Models.Describe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tin Tức</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label> Tiêu đề</label>
        </th>
        <th>
            <label> Nội Dung</label>
        </th>

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.Raw(item.NameDescribe)
    </td>
    <td>
        @Html.Raw(item.ContentDescribe)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.NameDescribe }) |
